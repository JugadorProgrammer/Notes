<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:Notes.ViewModels;assembly=Notes"
             x:DataType="vm:MainViewModel"
             x:CompileBindings="True"
             x:Class="Notes.Views.StartMenuView">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>

    <Button Grid.Column="0" Command="{Binding SwitchToNoteCommand}"
            HorizontalAlignment="Center" VerticalAlignment="Center">
      <Svg Path="/Assets/note.svg" Width="100" Height="100"/>
    </Button>

    <Button Grid.Column="1" Command="{Binding SwitchToRouteMapCommand}"
            HorizontalAlignment="Center" VerticalAlignment="Center">
      <Svg Path="/Assets/routemap.svg" Width="100" Height="100"/>
    </Button>

  </Grid>
</UserControl>
